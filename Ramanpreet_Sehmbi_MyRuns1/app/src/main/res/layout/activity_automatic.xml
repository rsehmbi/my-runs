<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPS"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Automatic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_cancel_id"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/gps_save_button_id"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:onClick="OnButtonSave"
            android:layout_margin="5dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/gps_cancel_button_id"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnButtonCancel"
            android:text="Stop"
            android:layout_width="match_parent">
        </Button>
        <Button
            android:id="@+id/bind_save_button_id"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bind"
            android:onClick="OnBindSave"
            android:layout_margin="5dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/unbind_button_id"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnUnBindCancel"
            android:text="UnBind"
            android:layout_width="match_parent">
        </Button>

    </LinearLayout>
</RelativeLayout>